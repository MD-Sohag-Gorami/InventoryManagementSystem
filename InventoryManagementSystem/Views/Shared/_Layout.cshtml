
@inject Microsoft.AspNetCore.Identity.SignInManager<IdentityUser> _signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="topnav">
        
           
                <div>
                     <a class="active" asp-area="" asp-controller="Home" asp-action="Index">InventoryManagementSystem</a>
                </div>
                @if (_signInManager.IsSignedIn(User))
                {
                    <div>
                        <a asp-area="" asp-controller="Product" asp-action="Index">All Product</a>
                    </div>
                    <div>
                        <a asp-area="" asp-controller="Product" asp-action="AddProduct">Add Product</a>
                    </div>
                    <div>
                        <a > @User.Identity.Name </a>
                    </div>
                    <div>
                        <a asp-controller="" asp-action="">Roles</a>
                    </div>

                    <div>
                        @*<form method="post" asp-controller="Account" asp-action="Logout">

                            <button type="submit"> Logout </button> 

                        </form>*@
                        <a asp-area="" asp-controller="Account" asp-action="LogOut">Logout</a>
                    </div>

                }
                else
                {
                    <div>
                    <a asp-area="" asp-controller="Account" asp-action="SignUp">SingUp</a>
                    </div>
                    <div>
                        <a asp-area="" asp-controller="Account" asp-action="LogIn">Login</a>
                    </div>
                }
                
                <div>
                    <a asp-controller="" asp-action="">About Us</a>
                </div>
                <div>
                    <a asp-controller="" asp-action="">Contact Us</a>
                </div>
        </div>
        
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<footer class="footer">
    <div class="container">
        <div class="grid">
            <div class="col-l-6 col-s-12">
                <h6>InvenotryManagementSystem</h6>
                <p>
                  This is an InvenotryManagementSystem<br /> of a company.
                  It's just for learning purpose.
                </p>
            </div>
            
             <div class="col-l-6 col-s-12">
                <h6>Conduct</h6>
                <p> Dhaka Bangaldesh</p>
                <p>BS23@gmail.com</p>
            </div>

        </div>
        <div class="container">
            &copy; 2022 - InventoryManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Index">Jump</a>
        </div>

    </div>
</footer>

  @*  <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - InventoryManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Index">Jump</a>
        </div>
    </footer>*@
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
