
@model  List<WareHouseViewModel>

@{
    ViewData["Title"] = "Index";

     Pager pager = new Pager();
    int pageNo = 0;
    if(ViewBag.Pager !=null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

@*<button type="submit"><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="AddProduct">Add Product</a></button>*@

<div class="container">
  <div class="row">
    <div class="col-sm">
       @*For Searching option*@
       @* @await Component.InvokeAsync("TopProducts",new{count = 3})*@
       <br />
      <form asp-controller="WareHouse" asp-action="Index">
            <p>
                <input type="search" placeholder="Enter Warehouse Name " name="warehouseSearch" style="widows:500px;"/>
                <input type="submit" value="Search" class="btn-primary"/>
            </p>
  
      </form>
    </div>
    <div class="col-sm">
        <button>
             <a asp-controller="WareHouse" asp-action="AddWareHouse" style="color: white; text-decoration:none;">
			Add Warehouse
	  </a>
        </button>
     
    </div>
   
  </div>
</div>
<table class="ProductTable" styel="width:100%">
    <thead>
        <tr>
            <th>
                WareHouse Name
            </th>
            <th>
                WareHouse Location
            </th>
            <th>
                WareHouse Img
            </th>
            <th>
                Edit
            </th>
            <th>
               Delete
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var wareHouse in Model)
        {
            <tr>
                <td width="20%">
                    @wareHouse.Name
                </td>
                <td width="20%">
                    @wareHouse.Location
                </td>
                <td width="40%">
                     <img src="@wareHouse.ImgByteUrl" height="30" width="30">
                </td>
                 <td >
                  <a asp-controller="WareHouse" asp-action="Edit" asp-route-id="@wareHouse.Id"> Edit </a>
                </td>
                <td >
                  <a asp-controller="WareHouse" asp-action="Delete" asp-route-id="@wareHouse.Id"> Delete </a>

                </td>

                  <td >
                  <a asp-controller="WareHouse" asp-action="Detail" asp-route-id="@wareHouse.Id"> Details </a>

                </td>
                
            </tr>
            }
    </tbody>
</table>
<partial name="_WarehousePager" model="@pager"/>

