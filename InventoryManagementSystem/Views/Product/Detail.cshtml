@model ProductViewModel

<h1>Product details</h1>

<div class="border p-3 mt-4">

		<div class="mb-3">
			<h4>Name : @Model.Name</h4>
			<h4>PurchasePrice : @Model.PurchasePrice </h4>
			<h4>SellPrice : @Model.SellPrice </h4>
			<h4>ProductQnty : @Model.ProductQnty </h4>
			<h4>CreateDateOn : @Model.CreateDateOn </h4>
			<h4>Description : @Model.Description </h4>
			<h4>WareHouse: @Model.WareHouseName</h4>
			<img src="@Model.ImageUrl"/>
		</div>

		<a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
</div>


