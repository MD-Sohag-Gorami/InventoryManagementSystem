@model ProductViewModel

<form method="post" enctype="multipart/form-data">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Add Product</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Description"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="SellPrice"></label>
			<input asp-for="SellPrice" class="form-control" />
			<span asp-validation-for="SellPrice" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="ProductQnty"></label>
			<input asp-for="ProductQnty" class="form-control" />
			<span asp-validation-for="ProductQnty" class="text-danger"></span>
		</div>
		
		<div class="mb-3">
			<label asp-for="CreateDateOn"></label>
			<input asp-for="CreateDateOn" class="form-control" />
			<span asp-validation-for="CreateDateOn" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Image"></label>
			<input asp-for="Image" class="form-control" />
			<span asp-validation-for="Image" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="WareHouseId"></label>
			<select asp-for="WareHouseId" class="form-control" asp-items="@Model.AvaiableWarehouse"> </select>
			<span asp-validation-for="WareHouseId" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary" style="width:150px">Add Product</button>
		<a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>
