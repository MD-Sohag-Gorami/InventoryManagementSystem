@model InventoryManagementSystem.Models.SignUpUserModel


<form asp-action="SignUp" style="border:1px solid #ccc" enctype="multipart/form-data">
  <div class="container">
    <h1>Sign Up</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>
    <div asp-validation-summary="All" class="text-danger"></div>
    <br />

    <label asp-for="Email"> </label>
    <br />
    <input asp-for="Email" placeholder="Enter Email">
    <span asp-validation-for="Email"></span>
    <br />

    <label asp-for="Password"></label>
    <input asp-for="Password" placeholder="Enter Password">
    <span asp-validation-for="Password"></span>

    <label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword" placeholder="Enter ConfirmPassword">
    <span asp-validation-for="ConfirmPassword"></span>

    <br />
    <div class="clearfix">
      <button type="button" class="cancelbtn"> <a asp-action="Index" asp-controller="Home"> Cancel </a> </button>
      <button type="submit" class="signupbtn">Sign Up</button>
    </div>
    <br />
    <div>
    <p>Click  <a asp-action="LogIn" asp-controller="Account"> here  </a> to LogIn </p>
    </div>
  </div>
</form>
