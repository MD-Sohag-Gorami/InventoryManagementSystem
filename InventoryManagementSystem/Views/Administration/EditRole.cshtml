@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}
<h1>Edit Role</h1>
<form method="post" asp-action="EditRole" enctype="multipart/form-data">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Role</h2>
			<hr />
		</div>

		<div class="mb-3">
			<label asp-for="Id"></label>
			<input asp-for="Id" class="form-control" />
			<span asp-validation-for="Id" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="RoleName"></label>
			<input asp-for="RoleName" class="form-control" />
			<span asp-validation-for="RoleName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
			<a asp-action="ListRoles" class="btn btn-primary" style="width:150px">Cancle</a>
		</div>
		
	</div>

	<div class="card">
		<div class="card-header">
			<h3>User in this role</h3>
		</div>
		<div class="card-body">
			@if(Model.Users.Any())
			{
				foreach(var user in Model.Users)
				{
					<h5 class="card-title"> @user</h5>
				}
			}
			else
			{
				<h5 class="card-title">No users available </h5>
			}
		</div>
		<div class="card-footer">
			<a asp-action="EditUsersInRole" asp-controller ="Administration"
				asp-route-roleId ="@Model.Id" class="btn-btn-primary"> Add or Remove Users</a>
			
		</div>
	</div>
</form>


